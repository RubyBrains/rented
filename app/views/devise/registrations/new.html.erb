<div class= "container">
  <div class="col-md-4">
    <div id="box1" class="boxed blurred-bg tinted">
      <div class="content">
        <h1>Sign Up</h1>
          <p>You will love it.</p>
          <hr></hr>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off' }) do |f| %>
          <%= f.error_notification %>

          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
              </span>
              <%= f.text_field :name, required: true, placeholder: "Full Name", autofocus: true,  class: "form-control" %>
            </div>

          </p>

          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
              </span>
              <%= f.email_field :email, required: true, placeholder: "Email", autofocus: true,class: "form-control" %>
            </div>

          </p>
          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
              </span>
              <%= f.password_field :password, required: true, placeholder: "Password",class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>

          </p>

          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
              </span>
              <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true,class: "form-control" %>
            </div>

          </p>
          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-phone"></span>
              </span>
              <%= f.text_field :phone, required: true, placeholder: "Contact No.", autofocus: true,class: "form-control" %>
            </div>

          </p>

          <p>

            <div class="input-group input-group-lg">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-home"></span>
              </span>
              <%= f.text_field :address, required: true, placeholder: "Address", autofocus: true,class: "form-control" %>
            </div>

          </p>

          <p>
            <div class="form-actions">
              <%= f.button :submit, "Sign Up", class: "btn btn-primary" %><br>
            </div>
          </p>

        <hr>
        <a href="#" onclick="bringDown()" class="btn btn-lg btn-default">Already Registered?</a>  
        <% end %>  
      </div>
    </div>
  </div>  
</div>
